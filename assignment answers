1. Matrix Diagonal Sum: https://leetcode.com/problems/matrix-diagonal-sum/

class Solution {
    public int diagonalSum(int[][] mat) {
        int n=mat.length;
        int sum1=0;
        int res=0;
        for(int i=0;i<n;i++){
            sum1+=mat[i][i];
        }
        int sum2=0;
         for(int i=0;i<n;i++){
            sum2+=mat[i][n-1-i];
        }

        return res=(n%2!=0)?sum1+sum2-mat[n/2][n/2]:sum1+sum2;
    }
}
