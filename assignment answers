2.Rotate Image
class Solution {
    public void rotate(int[][] matrix) {
         int len = matrix.length;

          for(int i = 0; i < len; i++) {
            for(int j = 0; j < i; j++) {
                int tmp = matrix[i][j];
                matrix[i][j] = matrix[j][i];
                matrix[j][i] = tmp;
            }
        }

        for(int i=0;i<len;i++){
          int lp = 0;
            int rp=len-1;
            while(lp<rp){
                int temp= matrix[i][lp];
                matrix[i][lp]=matrix[i][rp];
                matrix[i][rp]=temp;
                 lp++;
                rp--;
            }  
        }        
    }
}

